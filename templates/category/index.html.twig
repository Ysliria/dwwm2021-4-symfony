{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <hr>

    <a href="{{ path('category_add') }}" class="btn btn-success float-end mb-3"><span class="fa-solid fa-plus"></span></a>

    <table class="table table-striped table-hover">
        <caption>Liste des categories</caption>

        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col" class="col-2">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for category in categories %}
            <tr>
                <th scope="row">{{ category.name }}</th>
                <td>
                    <a href="{{ path('category_show', {'category': category.id}) }}" class="btn btn-info"><span class="fa-solid fa-magnifying-glass"></span></a>
                    <a href="{{ path('category_update', {'category': category.id}) }}" class="btn btn-warning"><span class="fa-solid fa-pencil"></span></a>
                    <a href="" class="btn btn-danger"><span class="fa-solid fa-trash"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
